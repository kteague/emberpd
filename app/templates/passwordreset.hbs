<div id="pdinfo">
<h1>Passport Date</h1>

<div id="content">

<section class="first-page">
<p class="promote">Forgot your password?</p>
</section>

{{#if errorMessage}}
  <div class="alert alert-danger">
    {{#if errorCode}}
    <p><code>{{errorMessage}}</code>. Do not have an account? {{link-to "Join now" "signup"}}.</p>
    {{/if}}
  </div>
{{/if}}

{{#if resetEmailSent}}
<p>Password request sent. Check your email.</p>
{{else}}
<form>
		
<div class="form-horizontal">
  <div class="form-group">
  	<label class="col-sm-4 control-label">Email</label>
  	<div class="col-sm-8 field">
  	{{input value=email type="email" name="email" size="30"
      class="form-control" placeholder="Email"}}
  	</div>
  </div>

	<div class="form-group">
		<div class="col-sm-4"></div>
		<div class="col-sm-8 field">
		<button type="submit" class="btn btn-default btn-primary" {{action "sendPasswordReset"}} disabled={{isSendingReset}}>
    {{#if isSendingReset}}
      <i class="fa fa-spin fa-spinner"></i> Starting reset...
    {{else}}
      Start password reset
    {{/if}}		  
		</button>
    
		</div>
	</div>
</div>

</form>
{{/if}}

<div id="callout">Already a member? <span class="button">{{link-to "Sign in" "login"}}</span></div>

</div>
</div>